{
    "manifest_version": 2,
    "name": "高品质豆瓣FM",
    "version": "2.1.2",
    "description": "\"高品质豆瓣FM\"让你轻松享受高达320kbps高品质的豆瓣FM！",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "16": "icons/icon16.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "*://*.music.126.net/*",
        "*://music.163.com/*",
        "*://music.baidu.com/*",
        "*://play.baidu.com/*",
        "*://yinyueshiting.baidu.com/*",
        "*://119.75.215.114/*",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": ["js/lib/require.js", "js/require_config.js", "js/background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "css": ["css/main.css"],
        "js": ["js/lib/require.js", "js/require_config.js", "js/require_content.js",
               "js/content_fm.js"],
        "matches": ["http://douban.fm/", "http://douban.fm/?*"]
    }],
    "web_accessible_resources": ["icons/*", "js/*"],
    "browser_action": {
        "default_icon": "icons/icon32.png",
        "default_popup": "html/popup.html"
    }
}
